<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />

    {{! FONT AWESOME }}
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
      integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    {{! BULMA  }}
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css"
    />
    {{! CSS STYLESHEET }}
    <link rel="stylesheet" href="../../public/css/style.css" />
    <title>Tech Blog</title>
  </head>
  <body>

    <nav
      class="navbar mx-6 is-black"
      role="navigation"
      aria-label="main navigation"
    >
      <div class="navbar-brand mt-4">

        {{! <img src="/images/wine.png" width="112" height="98" /> }}

        <a
          role="button"
          class="navbar-burger"
          aria-label="menu"
          aria-expanded="false"
          data-target="navbarBasicExample"
        >
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>

      <div id="navbarBasicExample" class="navbar-menu">
        <div class="navbar-start">
          <a href="/" class="navbar-item">
            Home
          </a>

          <a href="/dashboard" class="navbar-item">
            Dashboard
          </a>
        </div>

        <div class="navbar-end">

          <div class="navbar-item">
            {{#unless userId}}
              <div class="buttons">
                <a href="/signup" class="button is-primary">
                  <strong>Sign up</strong>
                </a>
                <a href="/login" class="button is-light">
                  Log in
                </a>
              </div>
            {{else}}
              <div class="buttons">
                <a href="#" id="logout-link" class="button is-light">
                  Logout
                </a>
              </div>
            {{/unless}}
          </div>
        </div>
      </div>
    </nav>
    <section id="mainHero" class="hero my-6">
      <div class="hero-body">
        <p id="blogTitle" class="title has-text-centered">
          The Tech Blog
        </p>
        <p id="blogSub" class="subtitle has-text-centered">
          Share your thoughts and ideas with us.
        </p>
      </div>
    </section>

    {{{body}}}
  </body>
</html>

<script src="/js/logout.js"></script>